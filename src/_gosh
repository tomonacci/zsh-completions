_arguments -s -S \
  '-V[print version and exit]' \
  '(-b -i)-b[batch mode - do not print prompts; supersedes -i]' \
  '(-b -i)-i[interactive mode - force print prompts]' \
  '-q[do not read the default initialization file]' \
  '*-I+[add <path> to the head of the load path list]:<path>:_dirs' \
  '*-A+[add <path> to the tail of the load path list]:<path>:_dirs' \
  '*-u+[load and import <module>]:<module>' \
  '*-l+[load <file> before executing the script file or entering repl]:<file>:_files' \
  "*-L+[like -l, but do not complain if <file> doesn't exist]:<file>:_files" \
  '*-e+[evaluate Scheme expression <expr> before executing the script file or entering repl]:<expr>: ' \
  '*-E+[similar to -e, but reads <expr> as if it is surrounded by parenthesis]:<expr>: ' \
  "-p+[turn on the profiler]:<type>:(time load)" \
  "-m+[specify the name of the module in which the 'main' procedure is defined]:<module>: " \
  '-r+[start with the default environment defined in RnRS]:n:(7)' \
  '*-f+[set various flags]:<flag>:(
    case-fold
    load-verbose
    include-verbose
    warn-legacy-syntax
    no-inline
    no-inline-globals
    no-inline-locals
    no-inline-constants
    no-lambda-lifting-pass
    no-post-inline-pass
    no-source-info
    test
  )' \
  '*-F+[make <feature> available in cond-expand forms]:<feature>' \
  '*:file:_files'
